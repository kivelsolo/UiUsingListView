<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/le_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="@dimen/dp_10"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name"
        tools:textSize="@dimen/size_14sp" />
    <TextView
        android:id="@+id/le_device_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/le_device_name"
        tools:text="25:445:455:45"
        tools:textSize="@dimen/size_14sp" />
    <TextView
        android:id="@+id/le_device_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        app:layout_constraintStart_toEndOf="@+id/le_device_address"
        app:layout_constraintTop_toBottomOf="@+id/le_device_name"
        tools:text="25:445:455:45"
        tools:textSize="@dimen/size_14sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        app:layout_constraintTop_toBottomOf="@+id/le_device_address"
        android:background="@color/text_gray"/>

</androidx.constraintlayout.widget.ConstraintLayout>