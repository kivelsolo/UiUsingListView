<RelativeLayout android:id="@+id/content"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".gaussian_blur.GaussianBlurDemoActivity">

  <ImageView
      android:id="@+id/target_pic"
      android:layout_width="280dp"
      android:layout_height="280dp"
      android:layout_centerHorizontal="true"
      android:contentDescription="@null"
      android:scaleType="centerCrop"
      android:src="@drawable/p0" />

  <androidx.appcompat.widget.AppCompatSeekBar
      android:id="@+id/blur_seek_bar"
      android:layout_below="@+id/target_pic"
      android:layout_toRightOf="@+id/blur_button"
      android:layout_alignBottom="@+id/blur_button"
      android:layout_width="260dp"
      android:layout_height="wrap_content"/>

  <TextView
      android:id="@+id/text_radius"
      android:textSize="18sp"
      android:text="0%"
      android:layout_toEndOf="@+id/blur_seek_bar"
      android:layout_alignBottom="@+id/blur_seek_bar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <Button
      android:id="@+id/blur_button"
      android:layout_below="@+id/target_pic"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:elevation="10dp"
      android:text="Blur"
      android:textAllCaps="false"
      android:textColor="@android:color/black"
      android:textSize="22sp"/>

  <ImageView
      android:id="@+id/blur_pic"
      android:layout_width="280dp"
      android:layout_height="280dp"
      android:background="@color/apple_black"
      android:contentDescription="@null"
      android:layout_below="@+id/blur_button"
      android:layout_centerHorizontal="true"
      android:scaleType="centerCrop"/>
</RelativeLayout>

