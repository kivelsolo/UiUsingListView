<resources>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
         <!--All customizations that are NOT specific to a particular API-level can go here.-->
    </style>

    <style name="NoTitleBarTheme" parent="@android:style/Theme.Light.NoTitleBar"/>


    <style name="Lollipop_NoActionBar" parent="AppBaseTheme">
        <!--App Bar  的背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- status bar（状态栏）背景色。仅作用于 Lollipop 及更高版本 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- 许多控件在选中状态或获取焦点状态下使用这个颜色 -->
        <item name="colorAccent">@color/skygreen</item>
    </style>

    <style name="MDTheme" parent="AppBaseTheme">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 设置statusBarColor 为透明-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="customstyle">
         <item name="android:background">@android:color/holo_red_light</item>

    </style>

    <!-- 无Title的Dialog -->
    <style name="dialogNoTitle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

  <!--  <style name="dialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_anim_in</item>
    </style>-->


    <!-- 自定义SeekBar样式  Start-->
    <style name="MediaController_SeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_holo_dark</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/scrubber_control_selector_holo</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="player_controller_seekbar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/player_seekbar_progress</item>
        <item name="android:indeterminateDrawable">@drawable/player_seekbar_progress</item>
        <item name="android:minHeight">4dip</item>
        <item name="android:maxHeight">4dip</item>
        <item name="android:thumb">@drawable/player_seekbar_circle</item>
        <item name="android:thumbOffset">2dip</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:paddingRight">2dip</item>
    </style>
    <!-- 自定义SeekBar样式  End-->


    <style name="DetailPlayerButton.Pause">
        <item name="android:src">@drawable/exo_pause</item>
        <item name="android:contentDescription">@string/exo_controls_pause_description</item>
    </style>

    <style name="PlayTheme" parent="NoTitleBarTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
