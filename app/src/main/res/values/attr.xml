<resources>
    <!--定义字体、字体颜色、字体大小。 format是值的取值类型 -->
    <attr name="imageScaleType">
        <enum name="match" value="0" />
        <enum name="center" value="1" />
    </attr>

    <declare-styleable name="testView">
        <attr name="titleText" format="string"/>
        <attr name="titleColor" format="color"/>
        <attr name="titleSize" format="dimension"/>
        <attr name="myImage" format="reference"/>
        <attr name="imageWidth" format="dimension"/>
        <attr name="imageHeight" format="dimension"/>
        <attr name="imageScaleType"/>
    </declare-styleable>

    <declare-styleable name="RainView">
	    <attr name="rainNum" format="integer"/>
	    <attr name="randColor" format="boolean"/>
	     <attr name="size" format="integer"/>
	      <attr name="rainColor" format="integer"/>
	</declare-styleable>

    <!-- 圆形进度条自定义属性 -->
    <declare-styleable name="circleView">
        <attr name="innerColor" format="color"/>
        <attr name="outerColor" format="color"/>
        <attr name="circleWidth" format="dimension"/>
        <attr name="speed" format="integer"/>
    </declare-styleable>

    <declare-styleable name="PieChart">
        <attr name="showText" format="boolean"/>
        <attr name="labelPosition" format="enum">
            <enum name="left" value="0"/>   <!-- 自定义属性1 -->
            <enum name="right" value="1"/>  <!-- 自定义属性2 -->
        </attr>
    </declare-styleable>

    <!-- 文字颜色 -->
    <declare-styleable name="ColorTrackView">
        <attr name="text_origin_color" format="color"/>
        <attr name="text_change_color" format="color"/>
        <attr name="text_size" format="dimension"/>
        <attr name="direction" format="integer"/>
        <attr name="progress" format="float"/>
        <attr name="text" format="string"/>
    </declare-styleable>

     <declare-styleable name="AutoWrapTextView">
        <attr name="textColor" format="color"/>
        <attr name="paddingLeft" format="dimension"/>
        <attr name="paddingRight" format="dimension"/>
        <attr name="paddingTop" format="dimension"/>
        <attr name="paddingBottom" format="dimension"/>
        <attr name="textSize" format="integer"/>
        <attr name="lineSpacingExtra" format="integer"/>
    </declare-styleable>
</resources>