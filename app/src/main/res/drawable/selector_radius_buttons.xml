<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- normal样式 -->
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/skygreen" />       <!-- 填充的颜色 -->
            <corners android:radius="4dip" />               <!-- 设置弧形的半径 -->
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
               android:left="10dp"
               android:top="10dp"
               android:right="10dp"
               android:bottom="10dp"/>
        </shape>
    </item>

    <!-- 被按压样式 -->
     <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/qianpurple" /> <!-- 填充的颜色 -->
            <corners android:radius="6dip" /> <!-- 设置弧形的半径 -->
        </shape>
    </item>

    <!-- 上焦点样式 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/fruitpurple"/>
            <corners android:radius="6dip" />
        </shape>
    </item>

</selector>