<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/download_scroll">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/black">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/area_img_id"
                android:background="@color/suncolor">

            <ImageView
                    android:id="@+id/image_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pic_default"
                    android:layout_centerHorizontal="true"/>

            <Button
                    android:id="@+id/loadpic_btn"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radius_buttons"
                    android:text="获取网络图片"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>

            <Button
                    android:id="@+id/localpic_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="100dp"
                    android:background="@drawable/selector_radius_buttons"
                    android:text="获取本地图片"/>
            <ImageView
                    android:id="@+id/image_net"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pic_default"
                    android:layout_below="@+id/image_local"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/buttom_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/qianpurple" android:layout_below="@+id/area_img_id">

            <Button
                    android:id="@+id/btn_down_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radius_buttons"
                    android:text="下载APP"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
            <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp" android:layout_alignBottom="@+id/btn_down_app"
                    android:layout_toEndOf="@+id/btn_down_app"/>


        </RelativeLayout>
    </RelativeLayout>
</ScrollView>