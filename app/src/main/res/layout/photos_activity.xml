<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qianpurple"
    android:orientation="horizontal">

    <ListView
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/type_change_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/ironman_1"
        android:choiceMode="singleChoice"
        android:scrollbarStyle="insideInset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/normal_pic"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        app:layout_constraintHorizontal_weight="2"
        android:id="@+id/normal_pic"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/type_change_id"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>