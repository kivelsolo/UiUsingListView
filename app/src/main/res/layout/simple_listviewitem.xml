<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView android:layout_width="25dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="3dp"
               android:background="@color/transparent"
               android:src="@drawable/islive"
               android:layout_gravity="center_horizontal"
               android:id="@+id/commonadapter_item_img"
               tools:ignore="ContentDescription"/>
    <TextView android:layout_width="125dp"
              android:layout_height="30dp"
              android:textSize="22sp"
              android:textColor="@color/white"
              android:gravity="center"
              android:id="@+id/commonadapter_item_text"/>

</LinearLayout>