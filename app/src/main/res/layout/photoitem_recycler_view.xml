<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="108dp"
    android:layout_height="166dp"
    android:layout_margin="@dimen/poster_margin"
    android:background="#AE30A4F7">

    <ImageView
        android:id="@+id/recom_poster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/raspberry_pi_logo"
        tools:ignore="contentDescription"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="121dp"
        android:background="@color/dark_qian"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/item_date"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:padding="2dp"
            android:gravity="left|center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/darkorange"
            android:textSize="14sp"
            tools:text="@string/default_buttom_label"/>

        <TextView
            android:id="@+id/item_text"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="2dp"
            android:gravity="left|center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/ivory"
            android:textSize="18sp"
            android:marqueeRepeatLimit="marquee_forever"
            tools:text="@string/label_desc"/>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>