<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/update_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/update_bg"
        android:layout_width="wrap_content"
        android:layout_height="96px"
        android:background="@drawable/shape_tip_background"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="96px"
        android:orientation="horizontal" >
        <ImageView
            android:layout_width="36px"
            android:layout_height="36px"
            android:layout_marginLeft="32px"
            android:src="@drawable/ic_tip_warn" />

        <ImageView
            android:layout_width="36px"
            android:layout_height="36px"
            android:layout_marginLeft="14px"
            android:src="@drawable/ic_tip_left" />

        <ImageView
            android:layout_width="36px"
            android:layout_height="36px"
            android:src="@drawable/ic_tip_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="32px"
            android:text="快速切换氛围,"/>

        <ImageView
            android:layout_width="36px"
            android:layout_height="36px"
            android:src="@drawable/ic_tip_down" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginRight="32px"
            android:textSize="32px"
            android:text="打开氛围选择菜单"/>
    </LinearLayout>

</FrameLayout>