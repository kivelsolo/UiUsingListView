<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/demo_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25px"
        android:layout_marginTop="30px"
        android:layout_marginRight="25px"
        android:paddingBottom="30px"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8px"
        app:cardElevation="8px"
        app:cardMaxElevation="8px"
        app:contentPaddingTop="3px"
        tools:ignore="PxUsage">

        <TextView
            android:id="@+id/card_title_text"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_gravity="right"
            android:background="@color/wheat"
            android:contentDescription="描述"
            android:gravity="center_vertical"
            android:paddingStart="20px"
            android:textColor="@color/black"
            android:textSize="50px"
            android:textStyle="bold"
            tools:text="CardView1测试:"
            tools:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/card_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:orientation="horizontal"
            tools:background="@color/deepskyblue"
            tools:layout_height="200px" />
    </android.support.v7.widget.CardView>
</RelativeLayout>