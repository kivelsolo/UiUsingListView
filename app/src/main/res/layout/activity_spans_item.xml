<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/span_custom_id">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:text="URL Span"
            android:id="@+id/title_a_id"/>
            <!--java代码中加粗setFakeBoldText(true)-->

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="This's KingZ Demo"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/darkgray"
            android:id="@+id/spantext_id"/>
            <!--android:textDirection="rtl"  从右到做的属性 需要添加application属性-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@color/darkgray"
            android:gravity="center"
            android:id="@+id/spanRightInfo_id"/>
            <!--android:textDirection="rtl"  从右到做的属性 需要添加application属性-->
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@color/darkgray"
            android:gravity="start"
            android:textSize="13sp"
            android:id="@+id/spanDesc_id"/>
</LinearLayout>