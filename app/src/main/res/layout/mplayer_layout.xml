<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <com.mplayer.MediaPlayerKernel
            android:id="@+id/mplayercore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
    </com.mplayer.MediaPlayerKernel>

    <ListView android:layout_width="170dp"
              android:layout_height="380dip"
              android:id="@+id/leftchanellView"
              android:background="@color/transparent_ban"
              android:divider="@color/lightskyblue"
              android:dividerHeight="1dp"
              android:listSelector="@color/mediumseagreen"
              android:layout_alignParentLeft="true"
              android:layout_centerVertical="true"
              android:scrollbars="none">
    </ListView>

    <com.mplayer.ApolloSeekBar
            android:id="@+id/mediaplayer_seekbar"
            android:layout_width="500dip"
            android:layout_height="50dip"
            android:background="@color/cardview_dark_background"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="50dp"/>

    <TextView
            android:id="@+id/changeSize_id"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:text="4:3"
            android:textSize="22sp"
            android:textColor="@color/cornflowerblue"
            android:background="@color/transparent_ban"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="end|center_vertical" android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
</RelativeLayout>