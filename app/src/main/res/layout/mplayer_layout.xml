<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:weightSum="1">
    <com.mplayer.MediaPlayerKernel
            android:id="@+id/mplayercore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
    </com.mplayer.MediaPlayerKernel>
    <ListView android:layout_width="200dp"
              android:layout_height="match_parent"
              android:id="@+id/leftchanellView"
              android:layout_gravity="start|top"
              android:background="@color/transparent"
              android:divider="@color/lightskyblue"
              android:dividerHeight="1dp"
              android:listSelector="@color/mediumseagreen"
              android:scrollbars="none">
    </ListView>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="30dp"
                  android:layout_gravity="bottom|center_horizontal"
                  android:layout_marginStart="20dp"
                  android:layout_marginEnd="20dp">
        <TextView
                android:id="@+id/leftTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:textSize="16sp"
                android:gravity="center_vertical"/>
        <com.mplayer.SeekBarView
                android:id="@+id/mplayer_progress"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:background="@color/transparent"/>
        <TextView
                android:id="@+id/rightTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:textSize="16sp"
                android:gravity="center_vertical"/>
    </LinearLayout>
    <TextView android:layout_width="32dp"
              android:layout_height="27dp"
              android:id="@+id/changeSize_id"
              android:text="4:3"
              android:textSize="22sp"
              android:background="@color/green"
              android:gravity="center_vertical|center_horizontal"
              android:layout_gravity="end|center_vertical"/>
</FrameLayout>