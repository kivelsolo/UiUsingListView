<resources>
    <!--
       API 21+的设备的应用基础主题。
       在API 21+的设备上，这个主题设置会替换掉 res/values/styles.xml 和 res/values-v14/styles.xml
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- API 21 theme customizations can go here. -->
        <item name="colorPrimary">@color/qianpurple</item>
        <item name="colorPrimaryDark">@color/fruitpurple</item>
        <item name="colorAccent">@color/skygreen</item>
    </style>


    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="PlayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>