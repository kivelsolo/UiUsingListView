<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

     <item android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <solid android:color="#00C1EA" />  <!-- 填充的颜色 -->
            <corners android:radius="3dip" />               <!-- 设置弧形的半径 -->
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
               android:left="3dp"
               android:top="3dp"
               android:right="3dp"
               android:bottom="3dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
         <shape
            android:shape="rectangle">
            <solid android:color="@color/dodgerblue" /> <!-- 填充的颜色 -->
            <corners android:radius="3dip" /> <!-- 设置弧形的半径 -->
        </shape>
    </item>
</selector>