<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zeke.example.coroutines">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:name="com.kingz.coroutines.DemoApp"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:supportsRtl="true">

        <activity
            android:name="com.kingz.coroutines.learn.CoroutinesDemosActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.kingz.coroutines.learn.retrofit.single.SingleNetworkCallActivity"
            android:label="@string/single_network_call"/>
        <activity
            android:name="com.kingz.coroutines.learn.retrofit.series.SeriesNetworkCallsActivity"
            android:label="@string/series_network_calls"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.kingz.coroutines.learn.retrofit.parallel.ParallelNetworkCallsActivity"
            android:label="@string/parallel_network_calls"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.kingz.coroutines.learn.room.RoomDBActivity"
            android:label="@string/room_database"
            android:theme="@style/AppTheme" />

        <activity
            android:name="com.kingz.coroutines.learn.timeout.TimeoutActivity"
            android:label="@string/timeout"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.kingz.coroutines.learn.task.onetask.LongRunningTaskActivity"
            android:label="@string/long_running_task"

            android:theme="@style/AppTheme" />
        <activity
            android:name="com.kingz.coroutines.learn.task.twotasks.TwoLongRunningTasksActivity"
            android:label="@string/two_long_running_tasks"
            android:theme="@style/AppTheme" />

        <activity
            android:name="com.kingz.coroutines.learn.errorhandling.exceptionhandler.ExceptionHandlerActivity"
            android:label="@string/exception_handler"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.kingz.coroutines.learn.errorhandling.supervisor.IgnoreErrorAndContinueActivity"
            android:label="@string/ignore_error_and_continue"
            android:theme="@style/AppTheme" />

    </application>
</manifest>
