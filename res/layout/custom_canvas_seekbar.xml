<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:context="com" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/canvas_seekbar_info" />

    <com.kingz.uiusingCanvas.SeekBarView
        android:id="@+id/mplayer_seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:nextFocusDown="@id/mplayer_seekbar"
        android:nextFocusLeft="@id/mplayer_seekbar"
        android:nextFocusRight="@id/mplayer_seekbar"
        android:nextFocusUp="@id/mplayer_seekbar" />

</RelativeLayout>
