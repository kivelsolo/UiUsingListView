<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250.0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/base_dialog_bg"
    android:backgroundTint="#202020"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="24dp"
        android:text="@string/alert_dialog_title"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="24dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <View
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_width="fill_parent"
        android:layout_height="1.0dp"
        android:background="#404040 " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/dialogButtonLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:focusedByDefault="true"
            android:focusable="true"
            android:text="@string/alert_dialog_cancle"
            android:textColor="#E84749"
            android:textSize="17sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#404040" />

        <Button
            android:id="@+id/dialogButtonRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:focusable="true"
            android:text="@string/alert_dialog_confirm"
            android:textColor="#20D38F"
            android:textSize="17sp" />
    </LinearLayout>



</LinearLayout>