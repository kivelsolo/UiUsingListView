<resources>
    <style name="PlayTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="player_controller_seekbar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/player_seekbar_progress</item>
        <item name="android:indeterminateDrawable">@drawable/player_seekbar_progress</item>
        <item name="android:minHeight">4dip</item>
        <item name="android:maxHeight">4dip</item>
        <item name="android:thumb">@drawable/player_seekbar_circle</item>
        <item name="android:thumbOffset">2dip</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:paddingRight">2dip</item>
    </style>
    <style name="player_bottomline_seekbar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/player_bottom_inline_progress</item>
        <item name="android:minHeight">1dip</item>
        <item name="android:maxHeight">1dip</item>
        <item name="android:thumb">@color/transparent</item>
        <item name="android:thumbOffset">0dip</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>
    <!-- 自定义SeekBar样式  End-->

    <style name="demo_btn_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_btn_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
