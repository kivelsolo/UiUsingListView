<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/tab_bg"
            android:paddingStart="54px"
            android:paddingEnd="54px"
            app:tabTextAppearance="@style/custom_tab_layout_style" />

        <ImageView
            android:id="@+id/tab_cover"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:scaleType="fitXY"
            android:src="@drawable/cover_guidbar"
            android:visibility="gone"
            tools:visibility="visible"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tab_layout"/>
    </RelativeLayout>


    <com.kingz.module.common.LoadStatusView
        android:id="@+id/load_status"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>