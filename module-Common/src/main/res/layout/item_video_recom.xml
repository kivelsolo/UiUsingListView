<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/recom_video_poster"
        android:layout_width="110dp"
        android:layout_height="65dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/size_1dp"
        android:layout_marginTop="@dimen/size_1dp"
        android:layout_marginEnd="@dimen/size_1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/pic_video_default"/>

    <TextView
        android:id="@+id/recom_video_name"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/size_1dp"
        android:textSize="@dimen/size_14sp"
        android:textColor="@color/text_dark"
        android:marqueeRepeatLimit="marquee_forever"
        android:background="@color/wheat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recom_video_poster"
        tools:text="一眼万年" />

</androidx.constraintlayout.widget.ConstraintLayout>