<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="177dp"
    android:layout_height="153dp"
    android:layout_marginBottom="@dimen/size_3dp"
    android:layout_marginStart="@dimen/size_2dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/recom_video_poster"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/pic_video_default"/>

    <TextView
        android:id="@+id/recom_video_name"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/size_2dp"
        android:paddingEnd="@dimen/size_2dp"
        android:textSize="@dimen/size_16sp"
        android:textColor="@color/text_dark"
        android:marqueeRepeatLimit="marquee_forever"
        android:ellipsize="end"
        android:maxLines="2"
        android:background="@color/wheat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recom_video_poster"
        tools:text="一眼万年SSSSSSAAAssssss" />

</androidx.constraintlayout.widget.ConstraintLayout>